#!/usr/bin/env bash

# Build CSS in watch mode and Jekyll serve in parallel
npx @tailwindcss/cli -i src/css/style.css -o assets/css/style.css --watch &
TAILWIND_PID=$!

# Give Tailwind a moment to build initially
sleep 1

bundle exec jekyll serve --livereload --drafts

# Cleanup Tailwind watch process when Jekyll exits
kill $TAILWIND_PID 2>/dev/null
