#!/usr/bin/env bash
set -euo pipefail

#MISE description="Build the site for production"

echo "==> Bundling JavaScript..."
node esbuild.config.js --minify

echo "==> Compiling Tailwind CSS..."
npx @tailwindcss/cli -i frontend/styles/tailwind.css -o src/assets/css/style.css --minify

echo "==> Building site..."
BRIDGETOWN_ENV=production bin/bridgetown build

echo "==> Build complete!"
