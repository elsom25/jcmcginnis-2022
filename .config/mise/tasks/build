#!/usr/bin/env bash
set -euo pipefail

#MISE description="Build the site for production"

echo "==> Building site..."
BRIDGETOWN_ENV=production bin/bridgetown build

echo "==> Compiling Tailwind CSS..."
npx @tailwindcss/cli -i src/assets/css/tailwind.css -o output/assets/css/style.css --minify

echo "==> Build complete!"

