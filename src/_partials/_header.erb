<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-stone-50/90 dark:bg-stone-950/90 border-b border-stone-200/50 dark:border-stone-800/50">
  <div class="h-0.5 w-full bg-accent-gradient opacity-90"></div>
  <%= render "container" do %>
    <div class="flex items-center justify-between h-14">
      <a href="/" class="flex items-center gap-2 transition-transform hover:-translate-y-0.5" aria-label="Home">
        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" class="w-4 h-4 fill-rose-600" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
        </svg>
        <span class="font-mono text-sm tracking-wide text-stone-700 dark:text-stone-300">Jesse McGinnis</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-1">
        <% menu.main.each do |item| %>
          <a href="<%= relative_url item.url %>"
             class="relative px-3 py-2 text-sm text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all after:absolute after:bottom-1 after:left-3 after:right-3 after:h-0.5 after:bg-gradient-to-r after:from-amber-500 after:to-rose-500 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:origin-left after:rounded-full <%= 'text-stone-900 dark:text-stone-100 after:scale-x-100' if item.url == '/' ? page.relative_url == '/' : page.relative_url.start_with?(item.url) %>">
            <%= item.name %>
          </a>
        <% end %>
        <a href="<%= relative_url '/feed.xml' %>" class="px-3 py-2 text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors" aria-label="RSS Feed">
          <svg class="w-4 h-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
        </a>

        <div class="flex items-center gap-0.5 p-0.5 ml-2 rounded-lg bg-stone-200/50 dark:bg-stone-800/50" role="radiogroup" aria-label="Theme selection">
          <button type="button" class="theme-btn p-1.5 rounded-md text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-200 transition-colors" data-theme="light" aria-label="Light mode" title="Light mode">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>
          <button type="button" class="theme-btn p-1.5 rounded-md text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-200 transition-colors" data-theme="system" aria-label="System theme" title="System theme">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </button>
          <button type="button" class="theme-btn p-1.5 rounded-md text-stone-500 dark:text-stone-400 hover:text-stone-700 dark:hover:text-stone-200 transition-colors" data-theme="dark" aria-label="Dark mode" title="Dark mode">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
        </div>
      </nav>

      <!-- Mobile Menu Button -->
      <button type="button" id="mobile-menu-btn" class="md:hidden flex items-center justify-center w-11 h-11 -mr-2 text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors" aria-label="Open menu" aria-expanded="false" aria-controls="mobile-menu">
        <svg class="hamburger-icon w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="close-icon w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  <% end %>

  <!-- Mobile Menu Drawer -->
  <div id="mobile-menu" class="mobile-drawer md:hidden hidden" aria-hidden="true">
    <div class="border-t border-stone-200/50 dark:border-stone-800/50 bg-stone-50/95 dark:bg-stone-950/95 backdrop-blur-md">
      <%= render "container" do %>
        <nav class="py-4 space-y-1">
          <% menu.main.each do |item| %>
            <a href="<%= relative_url item.url %>"
               class="flex items-center px-3 py-3 text-base font-medium rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100 dark:hover:bg-stone-800/50 transition-colors <%= 'text-stone-900 dark:text-stone-100 bg-stone-100 dark:bg-stone-800/50' if item.url == '/' ? page.relative_url == '/' : page.relative_url.start_with?(item.url) %>">
              <%= item.name %>
            </a>
          <% end %>
          <a href="<%= relative_url '/feed.xml' %>" class="flex items-center gap-3 px-3 py-3 text-base font-medium rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100 dark:hover:bg-stone-800/50 transition-colors" aria-label="RSS Feed">
            <svg class="w-5 h-5" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
            </svg>
            RSS Feed
          </a>
        </nav>

        <div class="border-t border-stone-200/50 dark:border-stone-800/50 py-4">
          <p class="px-3 mb-3 text-xs font-medium uppercase tracking-wider text-stone-400 dark:text-stone-600">Theme</p>
          <div class="flex items-center gap-2 px-3" role="radiogroup" aria-label="Theme selection">
            <button type="button" class="theme-btn flex-1 flex items-center justify-center gap-2 p-3 rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 bg-stone-100/50 dark:bg-stone-800/30 transition-colors" data-theme="light" aria-label="Light mode">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <span class="text-sm font-medium">Light</span>
            </button>
            <button type="button" class="theme-btn flex-1 flex items-center justify-center gap-2 p-3 rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 bg-stone-100/50 dark:bg-stone-800/30 transition-colors" data-theme="system" aria-label="System theme">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm font-medium">Auto</span>
            </button>
            <button type="button" class="theme-btn flex-1 flex items-center justify-center gap-2 p-3 rounded-lg text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 bg-stone-100/50 dark:bg-stone-800/30 transition-colors" data-theme="dark" aria-label="Dark mode">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
              <span class="text-sm font-medium">Dark</span>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <script>
    (function() {
      // Theme toggle functionality
      const buttons = document.querySelectorAll('.theme-btn');
      const html = document.documentElement;

      function getTheme() { return localStorage.getItem('theme') || 'system'; }

      function setTheme(theme) {
        localStorage.setItem('theme', theme);
        updateTheme();
        updateButtons();
      }

      function updateTheme() {
        const theme = getTheme();
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (theme === 'dark' || (theme === 'system' && prefersDark)) {
          html.classList.add('dark');
        } else {
          html.classList.remove('dark');
        }
      }

      function updateButtons() {
        const current = getTheme();
        buttons.forEach(btn => { btn.dataset.active = btn.dataset.theme === current; });
      }

      buttons.forEach(btn => { btn.addEventListener('click', () => setTheme(btn.dataset.theme)); });
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateTheme);
      updateButtons();

      // Mobile menu functionality
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      const hamburgerIcon = menuBtn.querySelector('.hamburger-icon');
      const closeIcon = menuBtn.querySelector('.close-icon');

      function toggleMenu() {
        const isOpen = mobileMenu.classList.contains('drawer-open');
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      }

      function openMenu() {
        mobileMenu.classList.remove('hidden');
        // Force reflow for animation
        mobileMenu.offsetHeight;
        mobileMenu.classList.add('drawer-open');
        mobileMenu.setAttribute('aria-hidden', 'false');
        menuBtn.setAttribute('aria-expanded', 'true');
        hamburgerIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        document.body.classList.add('mobile-menu-open');
      }

      function closeMenu() {
        mobileMenu.classList.remove('drawer-open');
        mobileMenu.setAttribute('aria-hidden', 'true');
        menuBtn.setAttribute('aria-expanded', 'false');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        document.body.classList.remove('mobile-menu-open');
        // Wait for animation to complete before hiding
        setTimeout(() => {
          if (!mobileMenu.classList.contains('drawer-open')) {
            mobileMenu.classList.add('hidden');
          }
        }, 200);
      }

      menuBtn.addEventListener('click', toggleMenu);

      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mobileMenu.classList.contains('drawer-open')) {
          closeMenu();
        }
      });

      // Close menu when clicking a link
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          closeMenu();
        });
      });

      // Close menu on window resize if we cross the md breakpoint
      const mediaQuery = window.matchMedia('(min-width: 768px)');
      mediaQuery.addEventListener('change', (e) => {
        if (e.matches && mobileMenu.classList.contains('drawer-open')) {
          closeMenu();
        }
      });
    })();
  </script>
</header>
