<footer class="relative py-12 md:py-16">
  <!-- Gradient fade top border instead of hard line -->
  <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-stone-300 dark:via-stone-700 to-transparent"></div>

  <!-- Subtle background -->
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-stone-50/80 dark:to-stone-950/50 pointer-events-none"></div>

  <div class="relative w-full max-w-[90rem] mx-auto px-6 md:px-12">
    <div class="grid md:grid-cols-3 gap-8 md:gap-12 items-start">
      <!-- Brand/About - Serif name to match header -->
      <div class="md:col-span-1">
        <a href="/" class="group inline-block mb-4">
          <span class="font-serif text-xl font-bold tracking-tight
                       text-stone-900 dark:text-white
                       group-hover:text-brand-600 dark:group-hover:text-brand-400
                       transition-colors">
            Jesse McGinnis
          </span>
        </a>
        <p class="text-sm text-stone-500 dark:text-stone-500 leading-relaxed">
          Engineering leader. Author. Builder of teams that ship.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="md:col-span-1">
        <h4 class="text-eyebrow text-stone-400 dark:text-stone-600 mb-4">Explore</h4>
        <nav class="flex flex-col gap-2">
          <a href="/blog/" class="text-sm text-stone-600 dark:text-stone-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Writing</a>
          <a href="/talks/" class="text-sm text-stone-600 dark:text-stone-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors">Speaking</a>
          <a href="/readme/" class="text-sm text-stone-600 dark:text-stone-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors">README.md</a>
          <a href="/feed.xml" class="text-sm text-stone-600 dark:text-stone-400 hover:text-brand-600 dark:hover:text-brand-400 transition-colors">RSS Feed</a>
        </nav>
      </div>

      <!-- Connect -->
      <div class="md:col-span-1">
        <h4 class="text-eyebrow text-stone-400 dark:text-stone-600 mb-4">Connect</h4>
        <%= render "social_links", style: "icons", show_labels: false, size: "md" %>
      </div>
    </div>

    <!-- Bottom bar - softer divider -->
    <div class="mt-12 pt-6 border-t border-stone-200/50 dark:border-stone-800/50 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-stone-400 dark:text-stone-600">
        Made with <span class="text-brand-500">♥</span> and too much coffee in Waterloo, ON
      </p>
      <div class="flex items-center gap-4">
        <span class="text-xs text-stone-400 dark:text-stone-600">© <%= Date.today.year %> Jesse McGinnis</span>
        <a href="#page-top" class="flex items-center justify-center w-8 h-8 rounded-full bg-stone-100 dark:bg-stone-800 text-stone-400 dark:text-stone-600 hover:bg-brand-100 dark:hover:bg-brand-900/30 hover:text-brand-600 dark:hover:text-brand-400 transition-all" aria-label="Back to top">
          <%= render "icons/arrow_up", size: "sm" %>
        </a>
      </div>
    </div>
  </div>
</footer>
