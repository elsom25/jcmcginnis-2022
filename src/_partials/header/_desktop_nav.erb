<nav class="hidden md:flex items-center gap-1">
  <% menu.main.each do |item| %>
    <a href="<%= relative_url item.url %>"
       class="relative px-3 py-2 text-sm text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-all after:absolute after:bottom-1 after:left-3 after:right-3 after:h-0.5 after:bg-gradient-to-r after:from-amber-500 after:to-rose-500 after:scale-x-0 hover:after:scale-x-100 after:transition-transform after:origin-left after:rounded-full <%= 'text-stone-900 dark:text-stone-100 after:scale-x-100' if item.url == '/' ? page.relative_url == '/' : page.relative_url.start_with?(item.url) %>">
      <%= item.name %>
    </a>
  <% end %>
  <a href="<%= relative_url '/feed.xml' %>" class="px-3 py-2 text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 transition-colors" aria-label="RSS Feed">
    <svg class="w-4 h-4" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none">
      <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
    </svg>
  </a>
  <div class="ml-2">
    <%= render "header/theme_toggle" %>
  </div>
</nav>
