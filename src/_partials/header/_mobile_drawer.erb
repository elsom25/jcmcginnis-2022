<!-- Mobile Menu Drawer -->
<div id="mobile-menu" class="mobile-drawer md:hidden hidden" aria-hidden="true">
  <div class="bg-white/95 dark:bg-stone-950/95 backdrop-blur-md shadow-lg shadow-stone-900/5 dark:shadow-black/20">
    <%= render "container" do %>
      <!-- Nav items - Editorial style with left accent border for active -->
      <nav class="py-6 space-y-1">
        <% menu.main.each do |item| %>
          <% is_active = active_nav_item?(item, page) %>
          <a href="<%= relative_url item.url %>"
             class="block px-4 py-3 text-lg font-medium transition-colors border-l-2
                    <%= is_active ? 'text-stone-900 dark:text-white border-brand-500' : 'text-stone-500 dark:text-stone-400 border-transparent hover:text-stone-900 dark:hover:text-white hover:border-stone-300 dark:hover:border-stone-600' %>">
            <%= item.name %>
          </a>
        <% end %>
        <a href="<%= relative_url '/feed.xml' %>"
           class="block px-4 py-3 text-lg font-medium transition-colors border-l-2 border-transparent
                  text-stone-500 dark:text-stone-400
                  hover:text-stone-900 dark:hover:text-white
                  hover:border-stone-300 dark:hover:border-stone-600">
          RSS Feed
        </a>
      </nav>

      <!-- Theme toggle -->
      <div class="flex items-center justify-between py-4 border-t border-stone-200/50 dark:border-stone-800/50">
        <span class="text-xs font-medium text-stone-400 dark:text-stone-500 uppercase tracking-wider">Theme</span>
        <div class="flex items-center gap-0.5 p-0.5 rounded-lg bg-stone-100 dark:bg-stone-800/50" role="radiogroup" aria-label="Theme selection">
          <button type="button" class="theme-btn p-2 rounded-md text-stone-500 dark:text-stone-400 data-[active=true]:text-brand-600 dark:data-[active=true]:text-brand-400 data-[active=true]:bg-white dark:data-[active=true]:bg-stone-700 data-[active=true]:shadow-sm transition-all" data-theme="light" aria-label="Light mode">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </button>
          <button type="button" class="theme-btn p-2 rounded-md text-stone-500 dark:text-stone-400 data-[active=true]:text-brand-600 dark:data-[active=true]:text-brand-400 data-[active=true]:bg-white dark:data-[active=true]:bg-stone-700 data-[active=true]:shadow-sm transition-all" data-theme="system" aria-label="System theme">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </button>
          <button type="button" class="theme-btn p-2 rounded-md text-stone-500 dark:text-stone-400 data-[active=true]:text-brand-600 dark:data-[active=true]:text-brand-400 data-[active=true]:bg-white dark:data-[active=true]:bg-stone-700 data-[active=true]:shadow-sm transition-all" data-theme="dark" aria-label="Dark mode">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
