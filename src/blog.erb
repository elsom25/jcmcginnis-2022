---
title: Writing
permalink: /blog/
layout: base
skip_footer: false
---
<div class="min-h-screen flex flex-col w-full">
  <%= render "header", page: resource, menu: site.data.menu %>

  <main class="flex-auto">
    <!-- Hero - BOLD Editorial Masthead with Light/Dark support -->
    <section class="relative min-h-[70vh] flex items-end overflow-hidden">
      <!-- Light: warm cream | Dark: deep stone -->
      <div class="absolute inset-0 bg-gradient-to-br from-stone-100 via-white to-brand-50/20 dark:from-stone-950 dark:via-stone-950 dark:to-stone-900"></div>
      <!-- Editorial ink wash - subtle in light, bold in dark -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_100%_100%_at_0%_0%,rgba(225,29,72,0.08),transparent_60%)] dark:bg-[radial-gradient(ellipse_100%_100%_at_0%_0%,rgba(225,29,72,0.25),transparent_60%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_80%_at_100%_100%,rgba(120,53,15,0.06),transparent_50%)] dark:bg-[radial-gradient(ellipse_60%_80%_at_100%_100%,rgba(120,53,15,0.20),transparent_50%)]"></div>

      <div class="relative w-full max-w-[90rem] mx-auto px-6 md:px-12 pb-16 md:pb-24 pt-32 md:pt-40">
        <!-- Eyebrow -->
        <div class="flex items-center gap-4 mb-8 animate-fade-in">
          <div class="h-px w-16 bg-brand-500"></div>
          <span class="text-xs font-mono uppercase tracking-[0.3em] text-stone-500">Essays & Musings</span>
        </div>

        <!-- MASSIVE masthead -->
        <h1 class="text-hero text-[4.5rem] sm:text-[7rem] md:text-[9rem] lg:text-[12rem] xl:text-[14rem] text-stone-900 dark:text-white leading-[0.8] tracking-tighter animate-fade-in-up -ml-1 md:-ml-2">
          Writing
        </h1>

        <!-- Tagline - full width, editorial sweep -->
        <div class="mt-12 md:mt-16 max-w-3xl animate-fade-in animate-delay-1">
          <p class="font-serif text-2xl md:text-3xl lg:text-4xl text-stone-600 dark:text-stone-400 leading-snug">
            On building <em class="text-brand-600 dark:text-brand-400 not-italic">high-trust teams</em>, the craft of engineering leadership, and a decade of lessons learned at scale.
          </p>
        </div>

        <!-- Sharp editorial rule -->
        <div class="mt-16 md:mt-20 flex items-center gap-8">
          <div class="h-0.5 flex-1 bg-gradient-to-r from-brand-500 via-brand-500/50 to-transparent"></div>
          <span class="text-xs font-mono uppercase tracking-widest text-stone-500 dark:text-stone-600"><%= collections.posts.resources.count %> Essays</span>
        </div>
      </div>
    </section>

    <%
      writing_posts = collections.posts.resources
    %>

    <!-- Featured Post - Bold Accent Zone -->
    <% if featured_post %>
      <section class="accent-zone relative py-24 md:py-32">
        <!-- Base gradient -->
        <div class="absolute inset-0 bg-gradient-to-b from-stone-900 via-stone-950 to-stone-900 dark:from-black dark:via-stone-950 dark:to-black"></div>
        <!-- Radial overlays for depth -->
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_20%_30%,rgba(225,29,72,0.20),transparent)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_80%_70%,rgba(245,158,11,0.12),transparent)]"></div>

        <div class="relative z-10 w-full max-w-[90rem] mx-auto px-6 md:px-12">
          <div class="flex items-center gap-4 mb-12">
            <div class="w-16 h-0.5 bg-brand-500"></div>
            <h2 class="text-eyebrow text-stone-500">Featured Essay</h2>
          </div>

          <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Quote card -->
            <div class="hidden lg:block">
              <%= render "card", color: "brand", size: "xl", bold: true, rounded: "2xl" do %>
                <div class="aspect-[4/3] flex items-center justify-center">
                  <div class="absolute top-6 left-8 text-8xl text-brand-500/30 font-serif leading-none">"</div>
                  <p class="relative font-serif text-2xl md:text-3xl text-white/90 leading-tight text-center px-4">
                    <%= featured_post.data.pull_quote || featured_post.data.description %>
                  </p>
                </div>
              <% end %>
            </div>

            <!-- Post info -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <% featured_post.data.categories&.each do |category| %>
                  <span class="px-4 py-1.5 text-xs font-bold uppercase tracking-wider bg-brand-500/20 text-brand-300 rounded-full border border-brand-500/30"><%= category %></span>
                <% end %>
                <span class="text-stone-500"><%= featured_post.date.strftime("%B %Y") %></span>
              </div>

              <h3 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-6 leading-tight">
                <%= featured_post.data.title %>
              </h3>

              <% if featured_post.data.description %>
                <p class="text-lg md:text-xl text-stone-400 leading-relaxed mb-10">
                  <%= featured_post.data.description %>
                </p>
              <% end %>

              <a href="<%= featured_post.relative_url %>" class="group inline-flex items-center gap-3 px-8 py-4 bg-white hover:bg-stone-100 text-stone-900 font-bold rounded-full transition-all hover:scale-105 shadow-xl shadow-white/10">
                Read essay
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <!-- All Posts by Year -->
    <section class="py-24 md:py-32">
      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <% writing_by_year = writing_posts.group_by { |p| p.date.year }.sort.reverse.to_h %>
        <% writing_by_year.each do |year, posts| %>
          <div class="mb-24 last:mb-0">
            <!-- Year anchor with oversized typography -->
            <div class="flex items-center gap-6 mb-16">
              <span class="font-serif text-7xl md:text-8xl lg:text-9xl font-bold text-stone-200 dark:text-stone-800 leading-none"><%= year %></span>
              <div class="flex-1 h-px bg-gradient-to-r from-stone-300 dark:from-stone-700 to-transparent"></div>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
              <% posts.each_with_index do |post, i| %>
                <article class="reveal-on-scroll" style="--stagger: <%= i %>">
                  <%= render "card", color: "brand", size: "lg", shadow_size: "2xl", h_full: true, href: post.relative_url do %>
                    <div class="flex items-center gap-3 mb-4">
                      <span class="text-sm font-mono text-stone-400 dark:text-stone-600 tabular-nums"><%= post.date.strftime("%B %e") %></span>
                      <% post.data.categories&.each do |category| %>
                        <span class="text-sm font-medium text-brand-600 dark:text-brand-400"><%= category %></span>
                      <% end %>
                    </div>

                    <h3 class="font-serif text-xl md:text-2xl font-semibold text-stone-900 dark:text-stone-100 mb-4 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
                      <%= post.data.title %>
                    </h3>

                    <% if post.data.description %>
                      <p class="text-stone-600 dark:text-stone-400 leading-relaxed mb-6">
                        <%= post.data.description %>
                      </p>
                    <% end %>

                    <div class="flex items-center gap-2 text-brand-600 dark:text-brand-400 font-semibold group-hover:gap-4 transition-all">
                      Read essay
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </div>
                  <% end %>
                </article>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Subscribe/RSS - Bold Accent Zone -->
    <section class="accent-zone relative py-24 md:py-32">
      <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-950 to-black"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_50%_50%,rgba(225,29,72,0.15),transparent)]"></div>
      <div class="absolute inset-0 pattern-plus opacity-20"></div>

      <div class="relative z-10 w-full max-w-3xl mx-auto px-6 md:px-12 text-center">
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="w-16 h-0.5 bg-brand-500"></div>
          <h2 class="text-eyebrow text-stone-500">Stay Updated</h2>
          <div class="w-16 h-0.5 bg-brand-500"></div>
        </div>

        <h3 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-6">
          Don't miss new essays
        </h3>
        <p class="text-lg text-stone-400 leading-relaxed mb-12 max-w-lg mx-auto">
          Subscribe via RSS to get new posts delivered to your reader of choice.
        </p>

        <a href="/feed.xml" class="group inline-flex items-center gap-3 px-10 py-5 bg-white hover:bg-stone-100 text-stone-900 text-lg font-bold rounded-full transition-all hover:scale-105 shadow-2xl">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
          Subscribe via RSS
        </a>
      </div>
    </section>
  </main>

  <%= render "footer" %>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  document.body.classList.add('reveal-ready');
  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('revealed');
        revealObserver.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });
  document.querySelectorAll('.reveal-on-scroll').forEach(el => revealObserver.observe(el));
});
</script>
