---
title: Writing
permalink: /blog/
layout: base
skip_footer: false
---
<div class="min-h-screen flex flex-col w-full">
  <%= render "header", page: resource, menu: site.data.menu %>

  <main class="flex-auto">
    <!-- Hero -->
    <section class="relative py-24 md:py-36 overflow-hidden">
      <%= render "gradient_orbs", preset: "brand" %>

      <!-- Decorative elements -->
      <div class="absolute top-32 right-[15%] w-16 h-16 border-2 border-brand-300/20 dark:border-brand-700/20 rotate-12 hidden lg:block"></div>
      <div class="absolute bottom-20 left-[20%] w-10 h-10 bg-accent-400/15 dark:bg-accent-600/10 rounded-full hidden lg:block"></div>

      <div class="relative w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <div class="max-w-4xl">
          <%= render "section_header", label: "Essays & Musings", color: "brand" %>

          <h1 class="text-hero text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-stone-900 dark:text-stone-100 mb-8 animate-fade-in-up">
            Thoughts on<br class="hidden md:block" />
            <span class="text-gradient bg-gradient-to-r from-brand-500 via-brand-600 to-accent-500">leading humans</span>
          </h1>

          <p class="text-xl md:text-2xl text-stone-600 dark:text-stone-400 leading-relaxed max-w-2xl animate-fade-in animate-delay-2">
            Essays on building high-trust teams, the craft of engineering management, and the lessons learned from a decade of leading at scale.
          </p>
        </div>
      </div>
    </section>

    <%
      writing_posts = collections.posts.resources
      featured_posts = writing_posts.select { |p| p.data.home || p.data.featured }
    %>

    <!-- Featured Post - Bold Accent Zone -->
    <% if featured_posts.any? %>
      <% featured = featured_posts.sample %>
      <section class="accent-zone relative py-24 md:py-32">
        <!-- Base gradient -->
        <div class="absolute inset-0 bg-gradient-to-b from-stone-900 via-stone-950 to-stone-900 dark:from-black dark:via-stone-950 dark:to-black"></div>
        <!-- Radial overlays for depth -->
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_20%_30%,rgba(225,29,72,0.20),transparent)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_80%_70%,rgba(245,158,11,0.12),transparent)]"></div>

        <div class="relative z-10 w-full max-w-[90rem] mx-auto px-6 md:px-12">
          <div class="flex items-center gap-4 mb-12">
            <div class="w-16 h-0.5 bg-brand-500"></div>
            <h2 class="text-eyebrow text-stone-500">Featured Essay</h2>
          </div>

          <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Quote card with glow -->
            <div class="relative hidden lg:block">
              <!-- Glow effect -->
              <div class="absolute -inset-4 bg-gradient-to-br from-brand-500/20 to-accent-500/10 rounded-3xl blur-2xl"></div>

              <!-- Card -->
              <div class="relative aspect-[4/3] bg-gradient-to-br from-stone-800/80 to-stone-900/80 backdrop-blur-sm rounded-2xl border border-stone-700/50 flex items-center justify-center p-12">
                <div class="absolute top-6 left-8 text-8xl text-brand-500/30 font-serif leading-none">"</div>
                <p class="relative font-serif text-3xl md:text-4xl text-white/90 leading-tight text-center">
                  <%= featured.data.description || featured.data.title %>
                </p>
              </div>
            </div>

            <!-- Post info -->
            <div>
              <div class="flex items-center gap-3 mb-6">
                <% featured.data.categories&.each do |category| %>
                  <span class="px-4 py-1.5 text-xs font-bold uppercase tracking-wider bg-brand-500/20 text-brand-300 rounded-full border border-brand-500/30"><%= category %></span>
                <% end %>
                <span class="text-stone-500"><%= featured.date.strftime("%B %Y") %></span>
              </div>

              <h3 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-6 leading-tight">
                <%= featured.data.title %>
              </h3>

              <% if featured.data.description %>
                <p class="text-lg md:text-xl text-stone-400 leading-relaxed mb-10">
                  <%= featured.data.description %>
                </p>
              <% end %>

              <a href="<%= featured.relative_url %>" class="group inline-flex items-center gap-3 px-8 py-4 bg-white hover:bg-stone-100 text-stone-900 font-bold rounded-full transition-all hover:scale-105 shadow-xl shadow-white/10">
                Read essay
                <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <!-- All Posts by Year -->
    <section class="py-24 md:py-32">
      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <% writing_by_year = writing_posts.group_by { |p| p.date.year }.sort.reverse.to_h %>
        <% writing_by_year.each do |year, posts| %>
          <div class="mb-24 last:mb-0">
            <!-- Year anchor with oversized typography -->
            <div class="flex items-center gap-6 mb-16">
              <span class="font-serif text-7xl md:text-8xl lg:text-9xl font-bold text-stone-200 dark:text-stone-800 leading-none"><%= year %></span>
              <div class="flex-1 h-px bg-gradient-to-r from-stone-300 dark:from-stone-700 to-transparent"></div>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
              <% posts.each_with_index do |post, i| %>
                <article class="group">
                  <a href="<%= post.relative_url %>" class="block h-full">
                    <div class="relative h-full bg-white dark:bg-stone-900 rounded-2xl p-8 border border-stone-200 dark:border-stone-800 transition-all duration-300 group-hover:shadow-2xl group-hover:-translate-y-2 group-hover:border-brand-300/50 dark:group-hover:border-brand-700/50">
                      <!-- Subtle glow on hover -->
                      <div class="absolute -inset-px rounded-2xl bg-gradient-to-br from-brand-500/0 to-brand-500/0 group-hover:from-brand-500/5 group-hover:to-transparent transition-all"></div>

                      <div class="relative">
                        <div class="flex items-center gap-3 mb-4">
                          <span class="text-sm font-mono text-stone-400 dark:text-stone-600 tabular-nums"><%= post.date.strftime("%B %e") %></span>
                          <% post.data.categories&.each do |category| %>
                            <span class="text-sm font-medium text-brand-600 dark:text-brand-400"><%= category %></span>
                          <% end %>
                        </div>

                        <h3 class="font-serif text-xl md:text-2xl font-semibold text-stone-900 dark:text-stone-100 mb-4 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
                          <%= post.data.title %>
                        </h3>

                        <% if post.data.description %>
                          <p class="text-stone-600 dark:text-stone-400 leading-relaxed mb-6">
                            <%= post.data.description %>
                          </p>
                        <% end %>

                        <div class="flex items-center gap-2 text-brand-600 dark:text-brand-400 font-semibold group-hover:gap-4 transition-all">
                          Read essay
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </div>
                      </div>
                    </div>
                  </a>
                </article>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Subscribe/RSS - Bold Accent Zone -->
    <section class="accent-zone relative py-24 md:py-32">
      <div class="absolute inset-0 bg-gradient-to-br from-stone-900 via-stone-950 to-black"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_50%_50%,rgba(225,29,72,0.15),transparent)]"></div>
      <div class="absolute inset-0 pattern-plus opacity-20"></div>

      <div class="relative z-10 w-full max-w-3xl mx-auto px-6 md:px-12 text-center">
        <div class="flex items-center justify-center gap-4 mb-8">
          <div class="w-16 h-0.5 bg-brand-500"></div>
          <h2 class="text-eyebrow text-stone-500">Stay Updated</h2>
          <div class="w-16 h-0.5 bg-brand-500"></div>
        </div>

        <h3 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-6">
          Don't miss new essays
        </h3>
        <p class="text-lg text-stone-400 leading-relaxed mb-12 max-w-lg mx-auto">
          Subscribe via RSS to get new posts delivered to your reader of choice.
        </p>

        <a href="/feed.xml" class="group inline-flex items-center gap-3 px-10 py-5 bg-white hover:bg-stone-100 text-stone-900 text-lg font-bold rounded-full transition-all hover:scale-105 shadow-2xl">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
          Subscribe via RSS
        </a>
      </div>
    </section>
  </main>

  <%= render "footer" %>
</div>
