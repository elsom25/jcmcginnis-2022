---
layout: default
title: Blog
permalink: /blog/
---

<div class="my-10 md:my-16">
  <% posts_by_year.each_with_index do |(year, posts), year_index| %>
    <div class="md:flex mb-10 animate-fade-in" style="animation-delay: <%= year_index * 50 %>ms" id="year-<%= year %>">
      <h2 class="flex-none w-24 text-stone-400 dark:text-stone-500 font-serif text-xl" id="y-<%= year %>"><%= year %></h2>
      <ul class="grow md:grid grid-cols-2 gap-x-4 md:gap-x-8">
        <% posts.each_with_index do |post, post_index| %>
          <li class="post-card mb-4 p-3 -mx-3 rounded-lg">
            <a href="<%= post.relative_url %>" class="text-sm font-light text-stone-500 dark:text-stone-400"><%= post.date.strftime("%B %e") %></a>
            <% post.data.categories&.each do |category| %>
              <a class="text-sm font-light text-rose-600 hover:text-rose-700 dark:text-rose-400 dark:hover:text-rose-300" href="<%= category_url(category) %>"><%= category %></a>
            <% end %>
            <h3 class="text-lg font-semibold font-serif"><a class="hover:text-rose-700 dark:hover:text-rose-400 transition-colors" href="<%= post.relative_url %>"><%= post.data.title %></a></h3>
            <h4 class="text-stone-600 dark:text-stone-400"><a href="<%= post.relative_url %>"><%= post.data.description %></a></h4>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
