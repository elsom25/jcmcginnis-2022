---
layout: default
title: Blog
permalink: /blog/
---

<div class="space-y-12">
  <% posts_by_year.each_with_index do |(year, posts), year_index| %>
    <section class="animate-fade-in animate-stagger md:flex gap-8" style="--stagger: <%= year_index %>" id="year-<%= year %>">
      <h2 class="font-serif text-lg text-stone-400 dark:text-stone-600 flex-none w-20 mb-4 md:mb-0" id="y-<%= year %>"><%= year %></h2>
      <div class="flex-1 grid md:grid-cols-2 gap-x-8 gap-y-6">
        <% posts.each do |post| %>
          <article>
            <div class="flex items-baseline gap-3 mb-1">
              <span class="text-sm text-stone-400 dark:text-stone-600"><%= post.date.strftime("%B %e") %></span>
              <% post.data.categories&.each do |category| %>
                <a class="text-sm font-medium text-rose-600 dark:text-rose-400 hover:text-rose-700 dark:hover:text-rose-300 transition-colors" href="<%= category_url(category) %>"><%= category %></a>
              <% end %>
            </div>
            <h3>
              <a href="<%= post.relative_url %>" class="font-serif text-lg font-semibold text-stone-900 dark:text-stone-100 hover:text-rose-700 dark:hover:text-rose-400 transition-colors"><%= post.data.title %></a>
            </h3>
            <% if post.data.description %>
              <p class="mt-1 text-stone-600 dark:text-stone-400 text-sm leading-relaxed"><%= post.data.description %></p>
            <% end %>
          </article>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
