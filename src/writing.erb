---
title: Writing
permalink: /writing/
layout: default
---
<div class="max-w-3xl mx-auto">
  <!-- Header -->
  <header class="mb-12 animate-fade-in">
    <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-stone-900 dark:text-stone-100 leading-tight tracking-tight mb-4">
      Writing
    </h1>
    <p class="text-lg text-stone-600 dark:text-stone-400 leading-relaxed">
      Thoughts on leading humans, building high-trust teams, and the craft of engineering management.
      Essays and shorter musings from a decade of building teams at scale.
    </p>
  </header>

  <!-- Featured Post -->
  <% featured_posts = collections.posts.resources.select { |p| p.data.home || p.data.featured } %>
  <% if featured_posts.any? %>
    <% featured = featured_posts.first %>
    <section class="mb-16 animate-fade-in animate-delay-1">
      <article class="p-8 md:p-10 bg-gradient-to-br from-brand-50 to-stone-50 dark:from-brand-950/30 dark:to-stone-900 rounded-2xl border border-brand-100 dark:border-brand-900/50">
        <span class="text-sm font-medium text-brand-600 dark:text-brand-400 mb-3 block">Featured</span>
        <h2 class="font-serif text-2xl md:text-3xl font-semibold text-stone-900 dark:text-stone-100 mb-3">
          <a href="<%= featured.relative_url %>" class="hover:text-brand-600 dark:hover:text-brand-400 transition-colors"><%= featured.data.title %></a>
        </h2>
        <% if featured.data.description %>
          <p class="text-lg text-stone-600 dark:text-stone-400 leading-relaxed mb-4">
            <%= featured.data.description %>
          </p>
        <% end %>
        <div class="flex items-center gap-4">
          <span class="text-sm text-stone-500 dark:text-stone-500"><%= featured.date.strftime("%B %e, %Y") %></span>
          <% featured.data.categories&.each do |category| %>
            <a href="<%= category_url(category) %>" class="text-sm text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 transition-colors"><%= category %></a>
          <% end %>
        </div>
      </article>
    </section>
  <% end %>

  <!-- All Posts by Year -->
  <section class="animate-fade-in animate-delay-2">
    <% posts_by_year.each_with_index do |(year, posts), year_index| %>
      <div class="mb-12" id="year-<%= year %>">
        <h2 class="font-serif text-xl text-stone-400 dark:text-stone-600 mb-6 sticky top-16 bg-bg-light dark:bg-bg-dark py-2 z-10" id="y-<%= year %>">
          <%= year %>
        </h2>

        <div class="space-y-8">
          <% posts.each do |post| %>
            <% next if post.data.categories&.include?("Talks") %>
            <article class="group">
              <div class="flex items-baseline gap-3 mb-1">
                <span class="text-sm text-stone-400 dark:text-stone-600 w-24 flex-shrink-0"><%= post.date.strftime("%B %e") %></span>
                <% post.data.categories&.each do |category| %>
                  <a href="<%= category_url(category) %>" class="text-sm font-medium text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 transition-colors"><%= category %></a>
                <% end %>
              </div>
              <h3 class="font-serif text-xl font-semibold text-stone-900 dark:text-stone-100 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors">
                <a href="<%= post.relative_url %>"><%= post.data.title %></a>
              </h3>
              <% if post.data.description %>
                <p class="mt-2 text-stone-600 dark:text-stone-400 leading-relaxed max-w-xl">
                  <%= post.data.description %>
                </p>
              <% end %>
            </article>
          <% end %>
        </div>
      </div>
    <% end %>
  </section>
</div>
