---
layout: default
---
<div class="max-w-4xl mx-auto">
  <!-- Talk header with event badge -->
  <header class="text-center mb-12 animate-fade-in">
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-100 dark:bg-accent-900/30 mb-6">
      <svg class="w-4 h-4 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span class="text-sm font-semibold text-accent-700 dark:text-accent-300"><%= resource.data.event %></span>
      <span class="text-accent-400 dark:text-accent-600">·</span>
      <span class="text-sm text-accent-600 dark:text-accent-400"><%= resource.data.year %></span>
    </div>

    <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-stone-900 dark:text-stone-100 leading-tight tracking-tight mb-4">
      <%= resource.data.title %>
    </h1>

    <% if resource.data.description %>
      <p class="text-lg md:text-xl text-stone-600 dark:text-stone-400 max-w-2xl mx-auto">
        <%= resource.data.description %>
      </p>
    <% end %>
  </header>

  <!-- Quick action buttons -->
  <% if resource.data.video_url || resource.data.slides_url %>
    <div class="flex flex-wrap items-center justify-center gap-4 mb-12 animate-fade-in animate-delay-1">
      <% if resource.data.video_url %>
        <a href="<%= resource.data.video_url %>" class="inline-flex items-center gap-2 px-6 py-3 bg-stone-900 dark:bg-stone-100 hover:bg-accent-600 dark:hover:bg-accent-500 text-white dark:text-stone-900 dark:hover:text-white font-semibold rounded-full transition-all hover:scale-105" rel="external" target="_blank">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Watch video
        </a>
      <% end %>
      <% if resource.data.slides_url %>
        <a href="<%= resource.data.slides_url %>" class="inline-flex items-center gap-2 px-6 py-3 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-900 dark:text-stone-100 font-semibold rounded-full transition-all" rel="external" target="_blank">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          View slides
        </a>
      <% end %>
    </div>
  <% end %>

  <!-- Decorative divider -->
  <div class="flex items-center justify-center gap-4 mb-12 animate-fade-in animate-delay-1" aria-hidden="true">
    <span class="flex-grow max-w-24 h-px bg-gradient-to-r from-transparent to-accent-300 dark:to-accent-800"></span>
    <svg class="w-5 h-5 text-accent-400 dark:text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
    </svg>
    <span class="flex-grow max-w-24 h-px bg-gradient-to-l from-transparent to-accent-300 dark:to-accent-800"></span>
  </div>

  <!-- Talk content -->
  <article class="max-w-2xl mx-auto prose prose-quoteless prose-stone prose-headings:font-serif prose-headings:font-semibold prose-headings:tracking-tight prose-p:leading-relaxed prose-a:font-medium prose-blockquote:border-l-accent-400 prose-blockquote:font-serif prose-blockquote:not-italic md:prose-lg dark:prose-invert animate-fade-in animate-delay-2">
    <%= yield %>
  </article>

  <!-- Talk footer -->
  <footer class="mt-16 pt-8 border-t border-stone-200 dark:border-stone-800">
    <div class="flex items-center justify-between">
      <a href="/talks/" class="text-sm font-medium text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 transition-colors">
        ← Back to speaking
      </a>
      <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(resource.data.title) %>&url=<%= CGI.escape("https://jcmcginnis.com#{resource.relative_url}") %>" class="text-sm text-stone-500 dark:text-stone-500 hover:text-accent-600 dark:hover:text-accent-400 transition-colors" target="_blank" rel="external">
        Share on X
      </a>
    </div>
  </footer>
</div>
