---
layout: base
---
<div class="min-h-screen flex flex-col w-full">
  <%= render "header", page: resource, menu: site.data.menu %>
  <main class="flex-auto">
    <%= render "container" do %>
      <div class="py-12 sm:py-16 md:py-20">
        <%= yield %>
      </div>
    <% end %>
  </main>
  <% unless resource.data.skip_footer %>
    <%= render "footer" %>
  <% end %>
</div>
