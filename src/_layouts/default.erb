---
layout: base
---
<div class="fixed inset-0 flex justify-center sm:px-8">
  <div class="flex w-full max-w-screen-lg lg:px-8">
    <div class="w-full bg-white ring-1 ring-stone-200/50 dark:bg-[#1c1917] dark:ring-stone-700/20"></div>
  </div>
</div>
<div class="relative flex flex-col w-full">
  <%= render "header", page: resource, menu: site.data.menu %>
  <main class="flex-auto">
    <div class="relative px-4 sm:px-8 lg:px-12 pb-4 sm:pb-8 lg:pb-12 mt-16 sm:mt:24 md:mt-32">
      <div class="mx-auto w-full max-w-screen-lg lg:px-8">
        <div class="relative px-4 sm:px-8 lg:px-12"><%= yield %></div>
      </div>
    </div>
  </main>
  <% unless resource.data.skip_footer %>
    <%= render "footer" %>
  <% end %>
</div>
