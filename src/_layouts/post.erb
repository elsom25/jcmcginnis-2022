---
layout: default
---
<div class="max-w-3xl mx-auto">
  <header class="text-center mb-10 animate-fade-in">
    <div class="flex items-center justify-center gap-3 mb-4">
      <span class="text-sm text-stone-400 dark:text-stone-600"><%= resource.date.strftime("%B %e, %Y") %></span>
      <% resource.data.categories&.each do |category| %>
        <a class="text-sm font-medium text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 transition-colors" href="<%= category_url(category) %>"><%= category %></a>
      <% end %>
    </div>
    <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-stone-900 dark:text-stone-100 leading-tight tracking-tight"><%= resource.data.title %></h1>
    <% if resource.data.description %>
      <p class="mt-4 text-lg text-stone-600 dark:text-stone-400"><%= resource.data.description %></p>
    <% end %>
  </header>

  <% if resource.data.image %>
    <figure class="mb-12 rounded-xl overflow-hidden shadow-lg animate-fade-in animate-delay-1">
      <img width="1080" height="608" src="<%= resource.data.image %>" alt="<%= resource.data.title %>" class="w-full" />
    </figure>
  <% else %>
    <div class="flex items-center justify-center gap-4 mb-12 animate-fade-in animate-delay-1" aria-hidden="true">
      <span class="flex-grow max-w-16 h-px bg-gradient-to-r from-transparent to-brand-300 dark:to-brand-800"></span>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 fill-brand-400 dark:fill-brand-600" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
      </svg>
      <span class="flex-grow max-w-16 h-px bg-gradient-to-l from-transparent to-brand-300 dark:to-brand-800"></span>
    </div>
  <% end %>

  <article class="max-w-2xl mx-auto prose prose-quoteless prose-stone prose-headings:font-serif prose-headings:font-semibold prose-headings:tracking-tight prose-p:leading-relaxed prose-a:font-medium prose-blockquote:border-l-brand-400 prose-blockquote:font-serif prose-blockquote:not-italic md:prose-lg dark:prose-invert animate-fade-in animate-delay-2">
    <%= yield %>
  </article>

  <!-- Post footer with share/navigation -->
  <footer class="mt-16 pt-8 border-t border-stone-200 dark:border-stone-800">
    <div class="flex items-center justify-between">
      <a href="/blog/" class="text-sm font-medium text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 transition-colors">
        ‚Üê Back to all writing
      </a>
      <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape(resource.data.title) %>&url=<%= CGI.escape("https://jcmcginnis.com#{resource.relative_url}") %>" class="text-sm text-stone-500 dark:text-stone-500 hover:text-brand-600 dark:hover:text-brand-400 transition-colors" target="_blank" rel="external">
        Share on X
      </a>
    </div>
  </footer>
</div>
