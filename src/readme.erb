---
title: README.md
permalink: /readme/
layout: page
header_theme: light
---
<%
  readme = site.data.readme
%>
    <!-- Hero Section - FULL TERMINAL COMMITMENT -->
    <section class="relative hero-extend min-h-[85vh] flex items-center overflow-hidden">
      <!-- Dark terminal background -->
      <div class="absolute inset-0 bg-[#0d1117]"></div>
      <!-- Subtle terminal glow -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(34,197,94,0.15),transparent_50%)]"></div>
      <!-- Scanline effect -->
      <div class="absolute inset-0 opacity-[0.02]" style="background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0,0,0,0.3) 2px, rgba(0,0,0,0.3) 4px);"></div>

      <div class="relative w-full max-w-[90rem] mx-auto px-6 md:px-12 hero-content-padding pb-20 md:pb-28">
        <div class="grid lg:grid-cols-12 gap-12 lg:gap-16 items-center">
          <!-- Left: Photo - stark and dramatic -->
          <div class="lg:col-span-4 order-2 lg:order-1">
            <div class="relative max-w-sm mx-auto lg:mx-0 animate-fade-in">
              <!-- Terminal-style frame -->
              <div class="absolute -inset-3 border border-emerald-500/30 rounded-lg"></div>
              <div class="absolute -inset-6 border border-emerald-500/10 rounded-lg"></div>
              <!-- Photo -->
              <img
                src="/assets/img/jesse-mcginnis.png"
                alt="Jesse McGinnis"
                class="relative w-full rounded-lg object-cover aspect-square grayscale-[30%] contrast-[1.1]" />
              <!-- Terminal overlay effect -->
              <div class="absolute inset-0 rounded-lg bg-gradient-to-t from-[#0d1117] via-transparent to-transparent opacity-40"></div>
            </div>
          </div>

          <!-- Right: Full terminal window -->
          <div class="lg:col-span-8 order-1 lg:order-2">
            <!-- Terminal window - THE WHOLE THING -->
            <div class="animate-fade-in-up">
              <!-- Terminal chrome -->
              <div class="flex items-center justify-between px-4 py-3 bg-[#161b22] rounded-t-xl border border-b-0 border-[#30363d]">
                <div class="flex items-center gap-2">
                  <span class="w-3 h-3 rounded-full bg-[#ff5f56]"></span>
                  <span class="w-3 h-3 rounded-full bg-[#ffbd2e]"></span>
                  <span class="w-3 h-3 rounded-full bg-[#27c93f]"></span>
                </div>
                <span class="text-xs font-mono text-[#8b949e]">jesse@macbook ~ README.md</span>
                <div class="w-16"></div>
              </div>

              <!-- Terminal content -->
              <div class="bg-[#0d1117] rounded-b-xl border border-t-0 border-[#30363d] p-6 md:p-8 font-mono">
                <!-- Command line -->
                <div class="flex items-center gap-2 text-sm mb-6">
                  <span class="text-[#27c93f]">➜</span>
                  <span class="text-[#79c0ff]">~</span>
                  <span class="text-[#c9d1d9]">cat README.md</span>
                  <span class="w-2 h-5 bg-[#c9d1d9] animate-pulse ml-1"></span>
                </div>

                <!-- README content -->
                <div class="space-y-6">
                  <div>
                    <p class="text-[#8b949e] text-sm mb-2"># Personal Operating Manual</p>
                    <h1 class="text-hero text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-[#c9d1d9] leading-tight">
                      README<span class="text-[#8b949e]">.md</span>
                    </h1>
                  </div>

                  <p class="text-[#8b949e] text-lg md:text-xl leading-relaxed max-w-2xl">
                    What I expect. How I show up. What inspires me.<br />
                    For myself first—then for anyone I work with.
                  </p>

                  <!-- Metadata block -->
                  <div class="pt-6 border-t border-[#30363d] space-y-3">
                    <div class="flex items-center gap-3">
                      <span class="text-[#7ee787]">author:</span>
                      <span class="text-[#c9d1d9]">Jesse McGinnis</span>
                    </div>
                    <div class="flex items-center gap-3">
                      <span class="text-[#7ee787]">version:</span>
                      <span class="text-[#c9d1d9]">2025.01</span>
                    </div>
                    <div class="flex flex-wrap items-center gap-3">
                      <span class="text-[#7ee787]">tags:</span>
                      <a href="https://www.enneagraminstitute.com/type-8/" class="px-3 py-1 bg-brand-500/20 text-brand-400 rounded-md hover:bg-brand-500/30 transition-colors" target="_blank" rel="external noopener">Type 8 "Challenger"</a>
                      <a href="https://www.16personalities.com/enfj-personality" class="px-3 py-1 bg-emerald-500/20 text-emerald-400 rounded-md hover:bg-emerald-500/30 transition-colors" target="_blank" rel="external noopener">ENFJ-A "Protagonist"</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- tl;dr - Bold Accent Zone -->
    <section class="accent-zone relative py-20 md:py-28">
      <!-- Base gradient -->
      <div class="absolute inset-0 bg-gradient-to-b from-stone-900 via-stone-950 to-stone-900 dark:from-black dark:via-stone-950 dark:to-black"></div>
      <!-- Radial overlays -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_20%_30%,rgba(225,29,72,0.25),transparent)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_80%_70%,rgba(245,158,11,0.15),transparent)]"></div>

      <div class="relative z-10 w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <div class="text-center mb-12">
          <span class="text-eyebrow text-stone-500">tl;dr</span>
        </div>

        <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-5xl mx-auto">
          <% readme.tldr.each_with_index do |item, i| %>
            <div class="reveal-on-scroll" style="--stagger: <%= i %>">
              <%= render "card", color: "brand", size: "lg", href: "##{item.anchor}", bold: true do %>
                <p class="text-xs font-mono uppercase tracking-widest text-brand-400/70 mb-3"><%= item.label %></p>
                <h3 class="font-serif text-xl md:text-2xl font-semibold text-white mb-4 leading-tight transition-colors group-hover:text-brand-100">
                  <%= item.headline %>
                </h3>
                <p class="text-stone-400 leading-relaxed text-sm">
                  <%= item.summary %>
                </p>
                <div class="mt-6 flex items-center gap-2 text-brand-400 text-sm font-medium group-hover:gap-3 transition-all">
                  Read more
                  <svg class="w-4 h-4 transition-transform group-hover:-translate-y-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- What I Expect - Numbered Cards -->
    <section id="what-i-expect" class="relative py-24 md:py-32 bg-white dark:bg-stone-950">
      <!-- Top edge decoration -->
      <div class="absolute top-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-brand-300 dark:via-brand-700 to-transparent"></div>

      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <%= render "section_header", label: "What I Expect", color: "brand" %>

        <p class="text-lg text-stone-600 dark:text-stone-400 leading-relaxed max-w-2xl mb-16">
          The questions I use to evaluate fit. Guardrails to stay true to myself.
        </p>

        <div class="space-y-8">
          <% readme.expectations.each_with_index do |expectation, i| %>
            <div class="reveal-on-scroll" style="--stagger: <%= i %>">
              <%= render "card", color: "brand", number: expectation.number, rounded: "3xl", bg_variant: "muted", shadow_size: "2xl", size: "lg" do %>
                <h3 class="font-serif text-2xl md:text-3xl font-semibold text-stone-900 dark:text-stone-100 mb-8 leading-tight">
                  <%= expectation.headline %>
                </h3>

                <div class="grid sm:grid-cols-2 gap-6">
                  <% expectation.keywords.each do |keyword| %>
                    <div class="space-y-2">
                      <h4 class="font-semibold text-brand-600 dark:text-brand-400"><%= keyword.label %></h4>
                      <p class="text-stone-600 dark:text-stone-400 leading-relaxed text-sm prose prose-sm prose-stone dark:prose-invert prose-em:text-brand-600 dark:prose-em:text-brand-400">
                        <%= keyword.detail.gsub(/\*([^*]+)\*/, '<em>\1</em>').html_safe %>
                      </p>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Bottom edge decoration -->
      <div class="absolute bottom-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-emerald-300 dark:via-emerald-700 to-transparent"></div>
    </section>

    <!-- How I Show Up - Principles Grid -->
    <section id="how-i-show-up" class="relative py-24 md:py-32 bg-stone-100 dark:bg-stone-900">
      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <%= render "section_header", label: "How I Show Up", color: "emerald" %>

        <p class="text-lg text-stone-600 dark:text-stone-400 leading-relaxed max-w-2xl mb-16">
          How I show up at my best. Not targets—observations. Learned through reflection and feedback.
        </p>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% readme.principles.each_with_index do |principle, i| %>
            <div class="h-full reveal-on-scroll" style="--stagger: <%= i %>">
              <%= render "card", color: "emerald", shadow_size: "2xl" do %>
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-100 to-emerald-200 dark:from-emerald-900/50 dark:to-emerald-800/50 flex items-center justify-center mb-4">
                  <span class="font-mono text-sm font-bold text-emerald-600 dark:text-emerald-400"><%= i + 1 %></span>
                </div>

                <h4 class="font-serif text-lg font-semibold text-stone-900 dark:text-stone-100 mb-3 transition-colors group-hover:text-emerald-700 dark:group-hover:text-emerald-300">
                  <%= principle.title %>
                </h4>

                <p class="text-sm text-stone-600 dark:text-stone-400 leading-relaxed prose prose-sm prose-stone dark:prose-invert prose-em:text-emerald-600 dark:prose-em:text-emerald-400">
                  <%= principle.detail.gsub(/\*([^*]+)\*/, '<em>\1</em>').html_safe %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Bottom edge decoration -->
      <div class="absolute bottom-0 inset-x-0 h-px bg-gradient-to-r from-transparent via-accent-300 dark:via-accent-700 to-transparent"></div>
    </section>

    <!-- Inspiration - Quote Galleries -->
    <section id="inspiration" class="relative py-24 md:py-32 bg-white dark:bg-stone-950">
      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <%= render "section_header", label: "Inspiration", color: "accent" %>

        <p class="text-lg text-stone-600 dark:text-stone-400 leading-relaxed max-w-2xl mb-16">
          Words that shaped how I think. What to seek. How to be. What to remember.
        </p>

        <!-- What to Seek -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-3 h-3 rounded-full bg-accent-500"></div>
            <h3 class="font-serif text-2xl font-semibold text-stone-900 dark:text-stone-100">What to seek</h3>
          </div>
          <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-2xl">What to look for. Where to spend time and energy.</p>

          <div class="grid md:grid-cols-2 gap-6">
            <% readme.quotes.seek.each_with_index do |quote, i| %>
              <div class="reveal-on-scroll" style="--stagger: <%= i %>">
                <%= render "card", color: "accent", rounded: "xl", quote_text: quote.text, quote_author: quote.author %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- How to Be -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-3 h-3 rounded-full bg-brand-500"></div>
            <h3 class="font-serif text-2xl font-semibold text-stone-900 dark:text-stone-100">How to be</h3>
          </div>
          <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-2xl">Guardrails on how to show up, how to think, and how to act.</p>

          <div class="grid md:grid-cols-2 gap-6">
            <% readme.quotes.be.each_with_index do |quote, i| %>
              <div class="reveal-on-scroll" style="--stagger: <%= i %>">
                <%= render "card", color: "brand", rounded: "xl", quote_text: quote.text, quote_author: quote.author %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- To Remember -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-3 h-3 rounded-full bg-emerald-500"></div>
            <h3 class="font-serif text-2xl font-semibold text-stone-900 dark:text-stone-100">To remember about the world</h3>
          </div>
          <p class="text-stone-600 dark:text-stone-400 mb-8 max-w-2xl">Essential reminders. Less directed, always grounding.</p>

          <div class="grid md:grid-cols-2 gap-6">
            <% readme.quotes.remember.each_with_index do |quote, i| %>
              <div class="reveal-on-scroll" style="--stagger: <%= i %>">
                <%= render "card", color: "emerald", rounded: "xl", quote_text: quote.text, quote_author: quote.author %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </section>

    <!-- Sagan - Pale Blue Dot (standalone contemplative section) -->
    <section class="relative min-h-screen flex items-center overflow-hidden bg-slate-950">
      <!-- Star field - CSS-only scattered points -->
      <div class="absolute inset-0 opacity-60" style="background-image: radial-gradient(1px 1px at 20px 30px, white, transparent), radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.7), transparent), radial-gradient(1px 1px at 90px 40px, white, transparent), radial-gradient(1px 1px at 130px 80px, rgba(255,255,255,0.6), transparent), radial-gradient(1.5px 1.5px at 160px 120px, white, transparent), radial-gradient(1px 1px at 200px 50px, rgba(255,255,255,0.4), transparent), radial-gradient(1px 1px at 250px 180px, white, transparent), radial-gradient(1px 1px at 280px 90px, rgba(255,255,255,0.7), transparent); background-size: 300px 200px;"></div>

      <!-- Subtle nebula atmosphere -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_100%_60%_at_50%_0%,rgba(56,189,248,0.12),transparent_60%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_60%_40%_at_20%_90%,rgba(139,92,246,0.08),transparent_50%)]"></div>

      <!-- Soft sunbeam -->
      <div class="absolute inset-0 bg-[linear-gradient(135deg,transparent_42%,rgba(251,191,36,0.04)_48%,rgba(251,191,36,0.06)_50%,rgba(251,191,36,0.04)_52%,transparent_58%)]"></div>

      <div class="relative z-10 w-full max-w-4xl mx-auto px-6 md:px-12 py-32 md:py-40">
        <div class="text-center">
          <!-- The Pale Blue Dot itself - a tiny glowing point -->
          <div class="flex flex-col items-center mb-16">
            <!-- Outer glow -->
            <div class="relative">
              <div class="absolute -inset-8 bg-sky-400/20 rounded-full blur-xl"></div>
              <div class="absolute -inset-4 bg-sky-400/30 rounded-full blur-md"></div>
              <!-- The dot -->
              <div class="relative w-3 h-3 rounded-full bg-gradient-to-br from-sky-300 via-sky-400 to-sky-500 shadow-[0_0_20px_8px_rgba(56,189,248,0.5),0_0_40px_16px_rgba(56,189,248,0.3),0_0_60px_24px_rgba(56,189,248,0.1)]"></div>
            </div>
            <span class="mt-8 text-xs font-mono uppercase tracking-[0.4em] text-sky-400/60">Pale Blue Dot</span>
          </div>

          <blockquote class="space-y-10">
            <% readme.sagan.split("\n\n").each_with_index do |paragraph, i| %>
              <p class="font-serif text-lg md:text-xl lg:text-2xl leading-relaxed text-stone-300/90 sagan-paragraph" style="--paragraph-index: <%= i %>;">
                <%= paragraph %>
              </p>
            <% end %>
          </blockquote>

          <cite class="block mt-16 text-base not-italic">
            <span class="text-stone-500">—</span>
            <span class="font-medium text-sky-400 ml-2">Carl Sagan</span><span class="text-stone-600">,</span>
            <em class="text-stone-500 ml-1">Pale Blue Dot</em><span class="text-stone-600">, 1994</span>
          </cite>
        </div>
      </div>

      <!-- Bottom fade to next section -->
      <div class="absolute bottom-0 inset-x-0 h-32 bg-gradient-to-t from-brand-700 to-transparent"></div>
    </section>

    <!-- Connect CTA (separate, warm section) -->
    <section class="relative py-24 md:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-brand-600 via-brand-700 to-stone-900">
        <div class="absolute inset-0 pattern-plus opacity-20"></div>
      </div>

      <div class="absolute top-1/2 left-[15%] -translate-y-1/2 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 right-[15%] -translate-y-1/2 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"></div>

      <div class="relative z-10 w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl font-semibold text-white mb-6">
            Want to work together?
          </h2>
          <p class="text-lg md:text-xl text-white/70 max-w-xl mx-auto mb-12">
            Always up for conversations with builders and leaders. Reach out.
          </p>

          <div class="flex flex-wrap justify-center gap-4">
            <a href="mailto:jesse@jcmcginnis.com" class="group inline-flex items-center gap-3 px-10 py-5 bg-white hover:bg-stone-100 text-stone-900 text-lg font-bold rounded-full transition-all hover:scale-105 shadow-2xl">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Email me
            </a>
          </div>

          <div class="mt-10">
            <%= render "social_links", style: "pills", show_labels: true, color: "white" %>
          </div>
        </div>
      </div>
    </section>
