---
layout: base
title: ":prototype-term-titleize"
permalink: /category/:term/
nav_section: /blog/
prototype:
  collection: posts
  term: categories
---
<% posts = paginator.resources.reject { it.data.feed == false } %>

<div class="min-h-screen flex flex-col w-full">
  <%= render "header", page: resource, menu: site.data.menu %>

  <main class="flex-auto">
    <!-- Hero - Consistent with Writing page -->
    <section class="relative py-20 md:py-28 overflow-hidden">
      <%= render "gradient_orbs", preset: "brand" %>

      <div class="relative w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <div class="max-w-4xl">
          <!-- Back link -->
          <a href="/blog/" class="group inline-flex items-center gap-2 text-sm text-brand-600 dark:text-brand-400 hover:text-brand-700 dark:hover:text-brand-300 transition-colors mb-6">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
            </svg>
            All writing
          </a>

          <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-semibold text-stone-900 dark:text-stone-100 mb-4 animate-fade-in">
            <%= resource.data.title %>
          </h1>

          <p class="text-lg text-stone-600 dark:text-stone-400 animate-fade-in animate-delay-1">
            <%= posts.size %> <%= posts.size == 1 ? 'essay' : 'essays' %> on <%= resource.data.title.downcase %>
          </p>
        </div>
      </div>
    </section>

    <!-- Posts List -->
    <section class="relative pb-24 md:pb-32">
      <div class="w-full max-w-[90rem] mx-auto px-6 md:px-12">
        <div class="max-w-4xl">
      <div class="space-y-1">
        <% posts.each_with_index do |post, index| %>
          <article class="reveal-on-scroll group" style="--stagger: <%= index %>">
            <a href="<%= post.relative_url %>" class="block py-6 border-b border-stone-200 dark:border-stone-800 transition-colors hover:border-brand-300 dark:hover:border-brand-700">
              <div class="flex flex-col md:flex-row md:items-baseline gap-2 md:gap-6">
                <!-- Date -->
                <time datetime="<%= post.date.strftime("%Y-%m-%d") %>" class="text-sm font-mono text-stone-400 dark:text-stone-600 md:w-32 shrink-0">
                  <%= post.date.strftime("%B %e, %Y") %>
                </time>

                <!-- Content -->
                <div class="flex-1 min-w-0">
                  <h2 class="font-serif text-xl md:text-2xl font-semibold text-stone-900 dark:text-stone-100 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition-colors leading-snug">
                    <%= post.data.title %>
                  </h2>

                  <% if post.data.description %>
                    <p class="mt-2 text-stone-600 dark:text-stone-400 leading-relaxed line-clamp-2">
                      <%= post.data.description %>
                    </p>
                  <% end %>
                </div>

                <!-- Arrow -->
                <div class="hidden md:flex items-center text-stone-300 dark:text-stone-700 group-hover:text-brand-500 dark:group-hover:text-brand-400 transition-colors">
                  <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </div>
              </div>
            </a>
          </article>
        <% end %>
      </div>
    </div>
  </div>
    </section>
  </main>

  <%= render "footer" %>
</div>
